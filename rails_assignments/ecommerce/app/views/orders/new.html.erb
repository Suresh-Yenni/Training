<style>
  .block{
       background-color: #0099ff;
       box-shadow: 0px 0px 20px;
       width:700px;
       height: 550px;
       text-align: center;
       margin-left:22%;
  }
  .links{
       color:#f1f1f1;
       font-size:40px;
       font-weight:bold;
       text-decoration: none;
  }
  .press{
       padding:3px;
       width:250px;
       font-size:25px;
       color:#0099ff;
  }
</style>
<h1 align="center" style="color: #0099ff;">Making New Order</h1>
<body bgcolor="#f1f1f1">
  <div class="block"><br><br>
    <%= form_for :orders, url: orders_path do |f|%>
       <p>
         <%= f.collection_select(:customer_id, Customer.all, :id, :name) %><br><br>
         <%= f.collection_select(:item_id, Item.all, :id, :item_name) %><br><br>
          <input type=date id=orders_date name=orders[date] /><br><br>
         <%= f.submit "Make Order", class: "press" %>
       </p>
    <% end %>
    <p>
      <%= link_to "Home", orders_home_path, {:class=>"links"} %>
    </p>
  </div>
</body>
