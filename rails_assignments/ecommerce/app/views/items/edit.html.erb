<style>
    .block{
       background-color: orange;
       box-shadow: 0px 0px 20px;
       width:700px;
       height: 550px;
       text-align: center;
       margin-left:22%;
    }
    .filling{
       padding:3px;
       width:250px;
       height:25px;
       font-size:25px;
    }
    .press{
       padding:3px;
       width:250px;
       font-size:25px;
       color:#0099ff;
    }
</style>
<h1 align="center" style="color: #0099ff;">Editing An Item</h1>
<body bgcolor="#f1f1f1">
  <div class="block">
    <%= form_for :items, url: item_path(@items), method: "put" do |f|%>
      <br><br>
      <p>
         <%= f.text_field :item_name, placeholder: "Item Name", class: "filling", :required => true  %><br><br>
         <%= f.number_field :price, placeholder: "Item Price", class: "filling", :required => true, :step=>0.01 %><br><br>
         <%= f.submit "Submit Changes", class: "press"  %>
       </p>
    <% end %>
  </div>
</body>
